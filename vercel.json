{
  "version": 2,
  "buildCommand": "npm run install:all && npm run build",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    { "source": "/socket.io/(.*)", "destination": "/api/socket" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/$1" }
  ],
  "functions": {
    "api/**/*": {
      "memory": 1024
    }
  }
}
